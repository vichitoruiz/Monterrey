<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ðŸŽ¨ COLORES BASE -->
    <Color x:Key="ColorPrimario">#001D47</Color>
    <Color x:Key="ColorSecundario">#FF4900</Color>
    <Color x:Key="ColorFondo">#F5F6FA</Color>
    <Color x:Key="ColorTexto">#333333</Color>
    <Color x:Key="ColorBorde">#E0E0E0</Color>

    <!-- BRUSHES -->
    <SolidColorBrush x:Key="PrimarioBrush" Color="{StaticResource ColorPrimario}"/>
    <SolidColorBrush x:Key="SecundarioBrush" Color="{StaticResource ColorSecundario}"/>
    <SolidColorBrush x:Key="FondoColor" Color="{StaticResource ColorFondo}"/>
    <SolidColorBrush x:Key="TextoPrimario" Color="{StaticResource ColorTexto}"/>
    <SolidColorBrush x:Key="BordeBrush" Color="{StaticResource ColorBorde}"/>

    <!-- FUENTES -->
    <FontFamily x:Key="FuenteGeneral">Segoe UI</FontFamily>
    <FontFamily x:Key="FuenteTitulos">Segoe UI Semibold</FontFamily>

</ResourceDictionary>
