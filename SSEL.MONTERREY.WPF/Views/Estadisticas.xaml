<UserControl x:Class="SSEL.MONTERREY.WPF.Views.Estadisticas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF">
    <Grid Background="{DynamicResource FondoColor}">
        <StackPanel Margin="40">
            <TextBlock Text="Estadísticas Globales" FontSize="22" FontWeight="Bold"
                       Foreground="{DynamicResource TextoPrimario}"/>
            <chart:PieChart Series="{Binding PieSeries}" LegendPosition="Bottom" Height="300" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>

