<UserControl x:Class="SSEL.MONTERREY.WPF.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:chart="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600">

    <Grid Background="{DynamicResource FondoColor}">
        <StackPanel Orientation="Vertical" Margin="40">
            <TextBlock Text="Resumen General" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextoPrimario}"/>

            <!-- Tarjetas -->
            <UniformGrid Columns="3" Margin="0,20,0,0" Height="100">
                <Border Background="{DynamicResource AzulPrimario}" CornerRadius="10" Margin="10">
                    <TextBlock Text="Usuarios Activos: 125" Foreground="White" FontSize="16"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource VerdeAcento}" CornerRadius="10" Margin="10">
                    <TextBlock Text="Consumo Mensual: 3500 kWh" Foreground="White" FontSize="16"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Border Background="#FF5757" CornerRadius="10" Margin="10">
                    <TextBlock Text="Reclamos Abiertos: 3" Foreground="White" FontSize="16"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </UniformGrid>

            <!-- Gráfico de consumo -->
            <GroupBox Header="Consumo Promedio (kWh)">
                <chart:CartesianChart Series="{Binding Series}" LegendPosition="Right" Height="300"/>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
