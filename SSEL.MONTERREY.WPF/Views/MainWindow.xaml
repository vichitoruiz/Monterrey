<Window x:Class="SSEL.MONTERREY.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SSEL.MONTERREY.WPF.ViewModels"
        Title="SSEL Monterrey"
        Height="700"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource FondoColor}">

    <Window.DataContext>
        <vm:MainWindowVM />
    </Window.DataContext>

    <DockPanel>
        <!-- Lateral -->
        <StackPanel DockPanel.Dock="Left" Background="{DynamicResource PrimarioBrush}" Width="200">
            <TextBlock Text="SSEL Monterrey"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="20,30,0,20" />

            <Button Content="Dashboard" Command="{Binding NavigateDashboard}" />
            <Button Content="Lecturas" Command="{Binding NavigateLecturas}" />
            <Button Content="Reclamos" Command="{Binding NavigateReclamos}" />
            <Button Content="Usuarios" Command="{Binding NavigateUsuarios}" />
            <Button Content="Configuración" Command="{Binding NavigateConfiguracion}" />
            <Button Content="Acerca de" Command="{Binding NavigateAcercaDe}" />
        </StackPanel>

        <!-- Contenido dinámico -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
