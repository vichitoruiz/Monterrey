<Application x:Class="SSEL.MONTERREY.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Tema primero -->
                <ResourceDictionary Source="pack://application:,,,/SSEL.MONTERREY.WPF;component/Assets/Themes/LightTheme.xaml" />

                <!-- Estilos después -->
                <ResourceDictionary Source="pack://application:,,,/SSEL.MONTERREY.WPF;component/Assets/Styles.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
